{
    "env": {
        "browser": true,
        "es6": true,
        "amd": true,
        "webextensions": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "standard-preact",
        "plugin:jest/recommended",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "process": true,
        "global": "writable",
        "module": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "jest"
    ],
    "rules": {
        "prettier/prettier": "error"
    }
}