{
  "name": "gistify",
  "version": "1.0.8",
  "main": "index.js",
  "author": "Harry Nicholls <harry.m.nicholls@gmail.com>",
  "license": "MIT",
  "scripts": {
    "copy": "cp -R images manifest.json src/popup.html build/",
    "copy:build-local": "yarn run copy && cp .env.local build/.env",
    "dev": "parcel build src/popup.js src/background.js -d build --no-content-hash --no-minify && yarn run copy",
    "build": "parcel build src/popup.js src/background.js src/scripts/get-code-snippets.js -d build --no-content-hash && yarn run copy",
    "build:local": "parcel build src/popup.js src/background.js src/scripts/get-code-snippets.js -d build --no-content-hash --no-minify && yarn run copy:build-local",
    "package": "rm -f get-the-gist.zip && zip -r get-the-gist.zip build",
    "test": "jest"
  },
  "dependencies": {
    "@aduh95/preact-fontawesome": "^0.1.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.22",
    "@fortawesome/free-regular-svg-icons": "^5.10.2",
    "@fortawesome/free-solid-svg-icons": "^5.10.2",
    "@octokit/rest": "^16.28.7",
    "copy-to-clipboard": "^3.2.0",
    "dotenv": "^8.1.0",
    "preact": "^10.0.0-rc.1",
    "query-string": "^6.8.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-syntax-async-generators": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "chrome-webstore-upload": "^0.2.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.1.0",
    "eslint": "5.7.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.15.1",
    "eslint-plugin-standard": "^4.0.1",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.9.0",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2"
  }
}
